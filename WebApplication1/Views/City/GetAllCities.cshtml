@model IEnumerable<DTO.City>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetAllCities</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Npa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Npa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>


            <td>
                
                @Html.ActionLink("Select", "Select", new {  id=item.IdCity  }) |
               
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
